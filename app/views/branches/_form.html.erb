<%= form_with model: branch, local: true do |f| %>
  <% if branch.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(branch.errors.count, "error") %> prohibited this branch from being saved:</h4>
      <ul>
        <% branch.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :circle_id, 'Circle', class: 'form-label' %>
    <%= f.collection_select :circle_id, circles, :id, :name, { prompt: 'Select Circle' }, class: 'form-select', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :code, class: 'form-label' %>
    <%= f.text_field :code, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_area :address, class: 'form-control', rows: 3 %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :active, class: 'form-check-input' %>
    <%= f.label :active, class: 'form-check-label' %>
  </div>

  <div>
    <%= f.submit submit_text, class: 'btn btn-primary' %>
    <%= link_to 'Cancel', branches_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
