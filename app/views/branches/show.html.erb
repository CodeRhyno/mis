<h1>Branch Details</h1>

<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title"><%= @branch.name %></h5>

    <table class="table">
      <tr>
        <th>Code:</th>
        <td><%= @branch.code || '-' %></td>
      </tr>
      <tr>
        <th>Circle:</th>
        <td><%= @branch.circle.name %></td>
      </tr>
      <tr>
        <th>Address:</th>
        <td><%= @branch.address || '-' %></td>
      </tr>
      <tr>
        <th>Status:</th>
        <td>
          <% if @branch.active %>
            <span class="badge bg-success">Active</span>
          <% else %>
            <span class="badge bg-secondary">Inactive</span>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit Branch', edit_branch_path(@branch), class: 'btn btn-primary' %>
  <%= button_to 'Delete Branch', branch_path(@branch), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Back to Branches', branches_path, class: 'btn btn-secondary' %>
</div>
