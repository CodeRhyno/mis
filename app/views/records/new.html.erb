<h1>Create Record</h1>

<%= form_with model: @record, local: true, multipart: true do |f| %>
  <% if @record.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h4>
      <ul>
        <% @record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.label :circle_id, 'Circle', class: 'form-label' %>
    <%= f.collection_select :circle_id, @circles, :id, :name, { prompt: 'Select Circle' }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :branch_id, 'Branch', class: 'form-label' %>
    <%= f.collection_select :branch_id, @branches, :id, :name, { prompt: 'Select Branch' }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <label class="form-label">Permissions</label>
    <% @permissions.each do |permission| %>
      <div class="form-check">
        <%= check_box_tag 'permission_ids[]', permission.id, false, class: 'form-check-input', id: "permission_#{permission.id}" %>
        <%= label_tag "permission_#{permission.id}", permission.title, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <label class="form-label">Upload PDF Documents</label>
    <%= file_field_tag 'documents[]', multiple: true, accept: 'application/pdf', class: 'form-control' %>
    <div class="form-text">You can select multiple PDF files. Each file will be hashed with SHA-256 for verification.</div>
  </div>

  <div>
    <%= f.submit 'Create Record', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', records_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
