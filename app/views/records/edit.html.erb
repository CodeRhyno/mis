<h1>Edit Record</h1>

<div class="alert alert-info">
  <strong>Note:</strong> You can only add more documents, not remove existing ones.
</div>

<%= form_with model: @record, local: true, multipart: true do |f| %>
  <% if @record.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</h4>
      <ul>
        <% @record.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.label :circle_id, 'Circle', class: 'form-label' %>
    <%= f.collection_select :circle_id, @circles, :id, :name, { prompt: 'Select Circle' }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :branch_id, 'Branch', class: 'form-label' %>
    <%= f.collection_select :branch_id, @branches, :id, :name, { prompt: 'Select Branch' }, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <label class="form-label">Add Additional Permissions</label>
    <% @permissions.each do |permission| %>
      <div class="form-check">
        <%= check_box_tag 'permission_ids[]', permission.id, @record.permissions.include?(permission), class: 'form-check-input', id: "permission_#{permission.id}" %>
        <%= label_tag "permission_#{permission.id}", permission.title, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <label class="form-label">Add More PDF Documents</label>
    <%= file_field_tag 'documents[]', multiple: true, accept: 'application/pdf', class: 'form-control' %>
    <div class="form-text">You can add additional PDF files. Existing documents cannot be removed.</div>
  </div>

  <div class="mb-3">
    <label class="form-label">Existing Documents</label>
    <ul class="list-group">
      <% @record.documents.each do |document| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= document.filename %></strong>
            <br>
            <small class="text-muted">SHA-256: <%= document.sha256_hash[0..15] %>... | Uploaded by <%= document.uploaded_by.full_name %></small>
          </div>
          <%= link_to 'Download', download_document_path(document), class: 'btn btn-sm btn-outline-primary' %>
        </li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= f.submit 'Update Record', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', record_path(@record), class: 'btn btn-secondary' %>
  </div>
<% end %>
