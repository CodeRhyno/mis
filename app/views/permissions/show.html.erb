<h1>Permission Details</h1>

<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title"><%= @permission.title %></h5>

    <table class="table">
      <tr>
        <th>Resource Type:</th>
        <td><%= @permission.resource_type || '-' %></td>
      </tr>
      <tr>
        <th>Action:</th>
        <td><%= @permission.action || '-' %></td>
      </tr>
      <tr>
        <th>Description:</th>
        <td><%= @permission.description || '-' %></td>
      </tr>
    </table>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit Permission', edit_permission_path(@permission), class: 'btn btn-primary' %>
  <%= button_to 'Delete Permission', permission_path(@permission), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this permission?' } %>
  <%= link_to 'Back to Permissions', permissions_path, class: 'btn btn-secondary' %>
</div>
