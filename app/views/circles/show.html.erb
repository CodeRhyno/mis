<h1>Circle Details</h1>

<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title"><%= @circle.name %></h5>

    <table class="table">
      <tr>
        <th>Code:</th>
        <td><%= @circle.code || '-' %></td>
      </tr>
      <tr>
        <th>Description:</th>
        <td><%= @circle.description || '-' %></td>
      </tr>
      <tr>
        <th>Status:</th>
        <td>
          <% if @circle.active %>
            <span class="badge bg-success">Active</span>
          <% else %>
            <span class="badge bg-secondary">Inactive</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>Branches Count:</th>
        <td><%= @circle.branches.count %></td>
      </tr>
    </table>
  </div>
</div>

<div class="mt-3">
  <%= link_to 'Edit Circle', edit_circle_path(@circle), class: 'btn btn-primary' %>
  <%= button_to 'Delete Circle', circle_path(@circle), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Back to Circles', circles_path, class: 'btn btn-secondary' %>
</div>
